FROM python:3
WORKDIR
COPY requirements.txt ./
RUN pip install flask
COPY ./static ./static/
COPY ./templates ./templates/
COPY ejercicio_app.py ./
RUN pip install --no-cache-dir -r requirements.txt 
EXPOSE 5050
CMD python /ejercicio_app.py
