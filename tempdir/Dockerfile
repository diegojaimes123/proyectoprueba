FROM python
RUN pip install flask
COPY ./static /home/myapp/static/
COPY ./templates /home/myapp/templates/
COPY ejercicio_app.py /home/myapp/
EXPOSE 5050
CMD python3 /home/myapp/ejercicio_app.py
